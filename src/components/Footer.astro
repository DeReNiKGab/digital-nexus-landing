---
import { Image } from 'astro:assets';
import MainLogo from '../assets/Logo_Main.jpg';
---

<!-- Footer -->
<footer
  id="ContactUs"
  class="overflow-hidden z-20 w-full border-white/5 border-t relative"
>
  <!-- Main Content -->
  <div
    class="lg:px-12 flex flex-col gap-8 text-center max-w-3xl mr-auto ml-auto pt-24 pr-6 pb-24 pl-6 gap-x-8 gap-y-8 items-center"
  >
    <div class="space-y-4">
      <h2
        class="text-5xl md:text-6xl lg:text-7xl font-semibold text-white tracking-tighter"
      >
        Get in Touch
      </h2>
      <p class="text-lg font-medium text-slate-400">
        Always online. Submit anytime.
      </p>
    </div>
    <div class="space-y-4">
      <div class="flex items-center gap-4">
        <span
          aria-hidden="true"
          class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center bg-white/5 text-slate-400 hover:text-[#0598CE] hover:border-[#0598CE]/30 hover:bg-[#0598CE]/10 transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-6 h-6"
          >
            <rect width="14" height="20" x="5" y="2" rx="2" ry="2"></rect>
            <path d="M12 18h.01"></path>
          </svg>
        </span>
        <p class="text-slate-300">+374 43 29 68 88</p>
      </div>

      <div class="flex items-center gap-4">
        <span
          aria-hidden="true"
          class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center bg-white/5 text-slate-400 hover:text-[#0598CE] hover:border-[#0598CE]/30 hover:bg-[#0598CE]/10 transition-all duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-6 h-6"
          >
            <path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"></path>
            <rect x="2" y="4" width="20" height="16" rx="2" class=""></rect>
          </svg>
        </span>
        <p class="text-slate-300">digitallnex@gmail.com</p>
      </div>
    </div>
    <div class="flex gap-4 gap-x-4 gap-y-4 items-center">
      <!-- Facebook -->
      <a
        href="/"
        class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center bg-white/5 text-slate-400 hover:text-[#0598CE] hover:border-[#0598CE]/30 hover:bg-[#0598CE]/10 transition-all duration-300 group hover:scale-110"
        aria-label="Facebook"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          data-lucide="facebook"
          class="lucide lucide-facebook w-5 h-5 stroke-[1.5]"
          ><path
            d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
          ></path></svg
        >
      </a>

      <!-- LinkedIn -->
      <a
        href="/"
        class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center bg-white/5 text-slate-400 hover:text-[#0598CE] hover:border-[#0598CE]/30 hover:bg-[#0598CE]/10 transition-all duration-300 group hover:scale-110"
        aria-label="LinkedIn"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          data-lucide="linkedin"
          class="lucide lucide-linkedin w-5 h-5 stroke-[1.5]"
          ><path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path><rect width="4" height="12" x="2" y="9"></rect><circle
            cx="4"
            cy="4"
            r="2"></circle></svg
        >
      </a>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="w-full border-t border-white/5 bg-[#020408]">
    <div
      class="flex flex-col md:flex-row lg:px-12 lg:pt-8 max-w-7xl mr-auto ml-auto pt-4 pr-6 pb-4 pl-6 gap-x-6 gap-y-6 items-center justify-between"
    >
      <!-- Brand -->
      <a href="/" class="flex items-center gap-2 group">
        <div
          class="group-hover:bg-[#D3D3D3]/20 transition-colors group-hover:border-[#D3D3D3]/50 bg-white/5 border-white/10 border rounded-lg pt-1.5 pr-1.5 pb-1.5 pl-1.5"
        >
          <Image
            src={MainLogo}
            alt="Digital Nexus Logo"
            class="h-8 w-8"
            loading="lazy"
            fetchpriority="auto"
          />
        </div>
        <span
          class="text-sm font-bold text-white tracking-tight uppercase group-hover:text-[#0598CE] transition-colors"
          >Digital Nexus</span
        >
      </a>

      <!-- Links -->
      <div class="flex items-center gap-8"></div>

      <!-- Copyright -->
      <div
        class="text-[10px] text-slate-600 font-mono tracking-wider uppercase"
      >
        Â© 2024 Digital Nexus. System Secure.
      </div>
    </div>
  </div>
</footer>
