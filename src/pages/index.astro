---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import WhoWeAre from "../components/WhoWeAre.astro";
import Services from "../components/Services.astro";
import Partners from "../components/Partners.astro";
import Footer from "../components/Footer.astro";
import { ui } from "../i18n/ui";

export async function getStaticPaths() {
  const languages = Object.keys(ui);
  return languages.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const currentLang = lang as keyof typeof ui;
---

<Layout title="DigitALL Nexus" lang={currentLang}>
  <Header lang={currentLang} />
  <main>
    <Hero lang={currentLang} />
    <WhoWeAre lang={currentLang} />
    <Services lang={currentLang} />
    <Partners lang={currentLang} />
  </main>
  <Footer lang={currentLang} />
</Layout>
